<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leyufore="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0px"
        android:layout_y="140px">
        <com.leyufore.tv_menu.customLayout.LeftMenu
            android:id="@+id/left_menu"
            android:layout_width="300px"
            android:layout_height="800px"
            android:layout_x="0px"
            android:layout_y="0px"
            android:background="@android:color/holo_blue_light"
            leyufore:multi_column="1"
            leyufore:multi_item_height="100"
            leyufore:multi_item_width="300"
            leyufore:multi_row="8" />
        <ImageView
            android:id="@+id/left_menu_focus_image"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_x="0px"
            android:layout_y="0px"
            android:alpha="0.5"
            android:background="@android:color/holo_orange_light"/>
    </AbsoluteLayout>
    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="300px"
        android:layout_y="140px"
        >
        <com.leyufore.tv_menu.customLayout.Content
            android:id="@+id/content"
            android:layout_width="1620px"
            android:layout_height="800px"
            android:layout_x="0px"
            android:layout_y="0px"
            android:background="@android:color/holo_blue_dark"
            leyufore:multi_column="4"
            leyufore:multi_item_height="400"
            leyufore:multi_item_width="405"
            leyufore:multi_row="2" />
        <ImageView
            android:id="@+id/content_focus_image"
            android:layout_width="400px"
            android:layout_height="405px"
            android:layout_x="0px"
            android:layout_y="0px"
            android:alpha="0.5"
            android:background="@android:color/holo_orange_light"/>
    </AbsoluteLayout>
    <AbsoluteLayout
        android:id="@+id/right_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1920px"
        android:layout_y="140px">
        <com.leyufore.tv_menu.customLayout.RightMenu
            android:id="@+id/right_menu"
            android:layout_width="300px"
            android:layout_height="800px"
            android:layout_x="0px"
            android:layout_y="0px"
            android:background="@color/black"
            leyufore:multi_column="1"
            leyufore:multi_item_height="100"
            leyufore:multi_item_width="300"
            leyufore:multi_row="8" />
        <ImageView
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_x="0px"
            android:layout_y="400px"
            android:alpha="0.5"
            android:background="@color/red"/>
    </AbsoluteLayout>
</AbsoluteLayout>