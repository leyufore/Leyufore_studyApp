<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/helios_child_bg"
    tools:context="whaley.tv_child.MainActivity">

    <AbsoluteLayout
        android:layout_width="1600px"
        android:layout_height="wrap_content"
        android:layout_x="320px"
        android:layout_y="0px">

        <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="1600px"
            android:layout_y="30px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/helicopter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="0px"
                android:layout_y="0px"
                android:background="@drawable/frame_anim_helicopter" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="150px"
                android:layout_y="50px"
                android:background="@drawable/helicopter_ribbon"
                android:minWidth="350px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="200px"
                android:layout_y="70px"
                android:text="欢迎来到儿童天地"
                android:textColor="#ffb0b0"
                android:textSize="32px" />
        </AbsoluteLayout>
    </AbsoluteLayout>
</AbsoluteLayout>
