<?xml version="1.0" encoding="utf-8"?>
<!-- 自定义 Item row of video list -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_height="70dip"
  android:orientation="horizontal" >  
  	<ImageView android:id="@+id/iv_video_thumbnail" 
  		android:layout_width="60dip" android:layout_height="60dip" 
  		android:layout_margin="5dip" />
	<RelativeLayout 
		android:layout_width="fill_parent"	android:layout_height="60dip" 
  		android:layout_marginTop="5dip"		android:layout_marginRight="5dip"
  		android:layout_marginBottom="5dip"	android:layout_toRightOf="@id/iv_video_thumbnail">	
  			
		<TextView android:id="@+id/tv_video_name" 
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textColor="@color/deepblue" android:textSize="20sp" />	
					
		<TextView android:id="@+id/tv_video_size"
			android:layout_below="@id/tv_video_name"
			android:layout_toLeftOf="@+id/iv_video_typeicon"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/blue" 	android:textSize="16sp" 
			android:gravity="center_vertical"	android:layout_marginRight="5dip"  />			
	</RelativeLayout>		  
</LinearLayout>